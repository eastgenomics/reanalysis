{
  "name": "eggd_caerus",
  "title": "eggd_caerus",
  "summary": "Reanalyses 100k EGLH cases and highlights potential causal variants",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "openSource": true,
  "properties": {},
  "tags": [],
  "categories": ["Annotation","Reports"]
  
  "inputSpec": [
    {
    "name": "case_json",
      "label": "case json",
      "class": "file",
      "patterns": ["*.json"],
      "help": "Case JSON file",
      "optional": false
    },
    {
    "name": "case_vcfs",
      "label": "case vcf",
      "class": "array:file",
      "patterns": ["*.vcf.gz"],
      "help": "Array of case SNV VCFs",
      "optional": false
    }],

  "outputSpec": [
    {
      "name": "output_folder",
      "label": "output_folder",
      "help": "All output files",
      "class": "array:file"
    }
    ],

  "runSpec": {
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "interpreter": "python3",
    "file": "src/caerus.py",
    "assetDepends": [],
    "execDepends": [
      {"name": "bedtools", "version": "2.30.0"},
      {"name": "bcftools", "version": "1.15"},
      {"name": "vcftools", "version": "0.1.17"},
      {"name": "CrossMap.py", "version": "0.6.4"}
      ],
    "timeoutPolicy": {
      "*": 
        {
        "hours": 48
        }
      }
   },

  "access": {
    "project": "CONTRIBUTE",
    },

  "developers": [
    "user-jay_miles",
    "org-emee_1"
  ],

  "authorizedUsers": [
    "org-emee_1"
  ],

  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem1_ssd1_x32"}}
    },
  }
}
